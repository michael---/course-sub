<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>	
	<!-- 与spring集成的写法，action等交予spring管理 -->
	
	<!-- 			 课程类别管理  			-->	
	<package name="preCourseActions" namespace="/" extends="abstract_struts">
		<action name="precourse_queryPreCourse" class="preCourseAction" method="">
			<result name="queryprecourse" type="redirect">/relation_apply.jsp</result>
			<result name="fail">/fail.jsp</result>
			<interceptor-ref name="myInterceptor" />
		</action>
		<action name="precourse_*" class="preCourseAction" method="{1}">
			<result name="success" type="redirectAction">relation_apply</result>
			<result name="fail">/fail.jsp</result>
			<interceptor-ref name="myInterceptor" />
		</action>
		<action name="testSubtype" class="subtypeAction" method="getAllSubtypes">
			<result name="success">/home.jsp</result>
			<result name="fail">/fail.jsp</result>
			<interceptor-ref name="myInterceptor" />
		</action>
	</package>
	
	
</struts>